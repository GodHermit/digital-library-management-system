{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:api": "node ./dist/apps/api/main.js",
    "start:api:dev": "nest start --watch --sourceRoot ./src/apps/api --entryFile ./apps/api/main",
    "start:consumers": "node ./dist/apps/consumers/main.js",
    "start:consumers:dev": "nest start --watch --sourceRoot ./src/apps/consumers --entryFile ./apps/consumers/main",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "yarn run build && npx typeorm -d dist/common/configs/typeOrm.config.js",
    "migration:generate": "yarn run typeorm -- migration:generate",
    "migration:create": "npx typeorm migration:create",
    "migration:revert": "yarn run typeorm -- migration:revert",
    "migration:run": "yarn run typeorm -- migration:run",
    "typeorm:prod": "npx typeorm -d dist/common/configs/typeOrm.config.js",
    "migration:run:prod": "npm run typeorm:prod -- migration:run"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/bull": "^11.0.2",
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.1.2",
    "@nestjs/swagger": "^8.1.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "@privy-io/server-auth": "^1.17.1",
    "axios": "^1.8.4",
    "bull": "^4.16.5",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "fuse.js": "^7.1.0",
    "lodash": "^4.17.21",
    "nestjs-paginate": "^11.1.1",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "request-ip": "^3.3.0",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.20",
    "viem": "^2.23.15"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.17.14",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
